@{
    ViewData["Title"] = "InsertBlock";
    ViewData["Slug1"] = "QUẢN LÝ BLOCK";
    ViewData["Slug2"] = "Quản lý block";
    List<Building> List = this.ViewBag.ListBuilding;
    List<Face> ListFace = this.ViewBag.ListFace;
}
@model List<BlockType>
<h3 style="text-align: center; margin-bottom: 10px; margin-top:20px;">Thêm Block</h3>
<div class="container">
    <form asp-controller="block" asp-action="InsertB" method="post">
        <div class=row>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Tên Block:</label>
                    <input type="text" class="form-control" id="blockDesc" name="blockDesc" required>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>ID BlockType:</label>
                    <select class="form-control" id="IDBT" name="IDBT" required>
                        @foreach (var item in Model)
                        {
                            <option value="@item.IDBT">@item.IDBT - @item.blockName</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class=row>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>ID Face:</label>
                    <select class="form-control" id="IDF" name="IDF" required>
                        @foreach (var item in ListFace)
                        {
                            <option value="@item.IDF">@item.IDF - @item.faceName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>ID Building:</label>
                    <select class="form-control" id="IDBD" name="IDBD" required>
                        @foreach (var item in List)
                        {
                        <option value="@item.IDBD">@item.IDBD - @item.buildingName</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success" id="submit" value="Thêm">Submit</button>
        <a asp-controller="block" asp-action="index" style="float:right;">Quay lại</a>
    </form>
</div>
