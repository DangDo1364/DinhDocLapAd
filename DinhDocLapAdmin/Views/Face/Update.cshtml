@{
    ViewData["Title"] = "Face";
    ViewData["Slug1"] = "QUẢN LÝ FACE";
    ViewData["Slug2"] = "Quản lý Face";
}
@model Face
<h3 style="text-align: center; margin-bottom: 10px; margin-top:20px;">Cập nhật Face</h3>
<div class="container">
    <form asp-controller="face" asp-action="UpdateFace" asp-route-id="@Model.IDF" method="post">
        <div class=row>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Tên Face:</label>
                    <input type="text" class="form-control" id="facename" name="facename" value="@Model.faceName" required>
                </div>
            </div>
        </div>     
        <button type="submit" class="btn btn-success" id="submit" value="Thêm">Submit</button>
        <a asp-controller="face" asp-action="index" style="float:right;">Back</a>
    </form>
</div>
