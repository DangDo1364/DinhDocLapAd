@{
    ViewData["Title"] = "InsertBlockType";
    ViewData["Slug1"] = "QUẢN LÝ BLOCKTYPE";
    ViewData["Slug2"] = "Quản lý blocktype";
}
<h3 style="text-align: center; margin-bottom: 10px; margin-top:20px;">Thêm BlockType</h3>
<div class="container">
    <form  asp-controller="blocktype" asp-action="InsertBT" method="post">
        <div class=row>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Tên BlockType:</label>
                    <input type="text" class="form-control" id="blockname" name="blockname" required>
                </div>
            </div>     
        </div>
        <div class=row>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Chiều cao</label>
                    <input type="text" class="form-control" id="height" name="height">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Màu sắc</label>
                    <input type="text" class="form-control" id="color" name="color">
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success" id="submit" value="Thêm">Submit</button>
        <a asp-controller="blocktype" asp-action="index" style="float:right;">Quay lại</a>
    </form>
</div>
