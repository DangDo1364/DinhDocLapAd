@{
    ViewData["Title"] = "Node";
    ViewData["Slug1"] = "QUẢN LÝ BLOCKTYPE";
    ViewData["Slug2"] = "Quản lý blocktype";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.currentPage;
    }

}
<style>
    td {
        text-align: center;
    }
</style>
@model List<BlockType>
<div class="table-responsive" id="blocktype">
    <table class="table" style="margin-top: 20px; background-color:white; ">
        <tr>
            <td colspan="4">
            
            </td>

            <td>
                <a asp-controller="blocktype" asp-action="insert" class="btn btn-primary">Thêm</a>
            </td>
        </tr>
        <tr style="background-color: #b4dca4; ">
            <td><strong>ID BlockType</strong></td>
            <td><strong>Tên BlockType</strong></td>
            <td><strong>Màu</strong></td>
            <td><strong>Chiều cao</strong></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDBT</td>
                <td>@item.blockName</td>
                <td>@item.color</td>
                <td>@item.height</td>
                <td>
                    <a class="btn btn-warning" asp-controller="block" asp-action="update" asp-route-id="@item.IDBT">Cập nhật</a>
                </td>
            </tr>
        }
    </table>
</div>
<nav aria-label="Page navigation example" style="float: right;">
    <ul class="pagination justify-content-center">
        @for (var pge = pager.startPage; pge <= pager.endPage; pge++)
        {
            <li class="page-item @(pge==pager.currentPage ? "active" : "")">
                <a class="page-link" asp-controller="blocktype"  asp-action="Pagination" asp-route-pg="@pge" >@pge</a>
            </li>
        }
    </ul>
</nav>