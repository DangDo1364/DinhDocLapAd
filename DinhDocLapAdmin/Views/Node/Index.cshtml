@{
    ViewData["Title"] = "Node";
    ViewData["Slug1"] = "QUẢN LÝ NODE";
    ViewData["Slug2"] = "Quản lý node";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.currentPage;
    }

}
<style>
    td {
        text-align: center;
    }
</style>
@model List<Node>
<div class="table-responsive" id="node">
    <table class="table" style="margin-top: 20px; background-color:white; ">
        <tr>
            <td colspan="4">                
            </td>
            <td>
                <a asp-controller="node" asp-action="insert" class="btn btn-primary">Thêm</a>
            </td>
        </tr>
        <tr style="background-color: #b4dca4; ">
            <td><strong>ID Node</strong></td>
            <td><strong>Tọa độ X</strong></td>
            <td><strong>Tọa độ Y</strong></td>
            <td><strong>Tọa độ Z</strong></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDN</td>
                <td>@item.x</td>
                <td>@item.y</td>
                <td>@item.z</td>
                <td>
                    <a class="btn btn-warning" asp-controller="node" asp-action="update" asp-route-id="@item.IDN">Cập nhật</a>
                </td>
            </tr>
        }
    </table>
</div>
<nav aria-label="Page navigation example" style="float: right;">
    <ul class="pagination justify-content-center">
        @for (var pge = pager.startPage; pge <= pager.endPage; pge++)
        {
            <li class="page-item @(pge==pager.currentPage ? "active" : "")">
                <a class="page-link" asp-controller="node"  asp-action="Pagination" asp-route-pg="@pge" >@pge</a>
            </li>
        }
    </ul>
</nav>