@{
    ViewData["Title"] = "Building";
    ViewData["Slug1"] = "QUẢN LÝ BUILDING";
    ViewData["Slug2"] = "Quản lý building";
}
<h3 style="text-align: center; margin-bottom: 10px; margin-top:20px;">Thêm Building</h3>
<div class="container">
    <form  asp-controller="Building" asp-action="InsertBD" method="post">
        <div class=row>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Tên tòa nhà:</label>
                    <input type="text" class="form-control" id="buildingname" name="buildingname" required>
                </div>
            </div>     
        </div>
        <div class=row>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" id="address" name="address">
                </div>
            </div>
        </div> 
        <div class=row>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Mô tả</label>
                    <textarea class="form-control" id="buildingDesc" name="buildingDesc">              
                    </textarea>
               
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success" id="submit" value="Thêm">Submit</button>
        <a asp-controller="building" asp-action="index" style="float:right;">Back</a>
    </form>
</div>
